<Window x:Class="TreeViewerWPF.NodeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeViewerWPF"
        mc:Ignorable="d"
        Title="Действие с узлом" Height="150" Width="310" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBox Name="tb_AddContent" Grid.Row="0" Grid.Column="0" Margin="10" Background="#FFF1F1F1" FontSize="20" FontFamily="Segoe WP" MaxLines="1"/>
        <Button Name="btn_Add" Content="Добавить" Grid.Row="0" Grid.Column="1" Margin="10" Background="#FF88EA88" Click="btn_Add_Click"/>
        <Button Name="btn_Remove" Content="Удалить" Grid.Row="1" Grid.ColumnSpan="2" Margin="10" Background="#FFF1B7B7" Click="btn_Remove_Click"/>
    </Grid>
</Window>
